{% assign current_variant = product.selected_or_first_available_variant %}
{% assign featured_image = current_variant.featured_image | default: product.featured_image %}
<div class="product">
<div class="product__inner container">
    <div class="product__images">
        <img class="product__images__featured" src="{{ featured_image | img_url: 'large' }}" alt="{{ featured_image.alt | escape }}" id="ProductPhotoImg">
        
        <div class="product__images__thumbnails">
            {% for image in product.images %}
                <img class="product__images__thumbnail" src="{{ image.src | img_url: 'compact' }}" alt="{{ image.alt | escape }}">
            {% endfor %}
        </div>
    </div>

    <div class="product__info">
        <div class="product__info__header">
            <h1 class="product__info__header__title">{{ product.title }}</h1>
            <p class="product__info__header__price">{{ current_variant.price | money }}</p>
        </div>

        <div class="product__info__details">
            <form action="/cart/add" method="post" enctype="multipart/form-data" id="AddToCartForm">
                <select class="product__info__details__variant-select" name="id" id="productSelect">
                    {% for variant in product.variants %}
                        {% if variant.available %}
                            <option value="{{ variant.id }}">
                                {{ variant.title }} - {{ variant.price | money_with_currency }}
                            </option>
                        {% else %}
                            <option disabled="disabled">
                                {{ variant.title }} - sold out
                            </option>
                        {% endif %}
                    {% endfor %}
                </select>

                <div class="product__info__details__bottom">
                    <div class="product__info__quantity">
                        <div class="product__info__quantity--picker">
                            <div class="quantity-btn minus">-</div>
                            <div class="quantity-btn value">1</div>
                            <div class="quantity-btn plus">+</div>
                        </div>
                    </div>
            
                    <input style="display:none;" type="number" id="Quantity" name="quantity" value="1" min="1">
                    <button class="btn" type="submit" name="add" id="AddToCart">Tilføj til kurv</button>
                </div>
            </form>
        </div>

        <div class="product__info__description-wrapper">
            <div class="product__info__description-wrapper__frame">
                <input id="buy-frame" type="checkbox"><label for="buy-frame"><b>Tilkøb af ramme (140 kr)</b></label>
            </div>

            <div class="product__info__description">{{ product.description }}</div>
        </div>
    </div>
</div>
</div>