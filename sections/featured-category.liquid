{% assign s = section.settings %}

<div class="featured-category__inner container">
    <h2 class="featured-category__title">{{ s.title }}</h2>

    {% for b in section.blocks %}
    {% assign bs = b.settings %}
        <div class="featured-category__row">
            <div class="featured-category__col js-feat-col">
                <h2 class="featured-category__cat__title">{{ bs.c1_title }}</h2>
                <div class="featured-category__btn">
                    <a href="{{ bs.c1_link }}" class="btn btn--white">{{ bs.c1_link_text }}</a>
                </div>
                {{ bs.c1_image | img_url: 'master' | img_tag }}
                <div class="overlay"></div>
            </div>

            <div class="featured-category__col js-feat-col">
                <h2 class="featured-category__cat__title">{{ bs.c2_title }}</h2>
                <div class="featured-category__btn">
                    <a href="{{ bs.c2_link }}" class="btn btn--white">{{ bs.c2_link_text }}</a>
                </div>
                {{ bs.c2_image | img_url: 'master' | img_tag }}
                <div class="overlay"></div>
            </div>
        </div>
    {% endfor %}
</div>

