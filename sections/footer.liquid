<div class="site-footer__inner container">
    <div class="site-footer__col">
        <p class="site-footer__text">Har du nogle spørgsmål?</p>
        <h3 class="site-footer__heading"><a href="tel:+4521475921">+45 21 47 59 21</a></h3>
        <p class="site-footer__text">Mandag - Torsdag: 8.00 - 16.00</p>
        <p class="site-footer__text">Fredag: 8.00 - 15.00</p>
        <h3 class="site-footer__heading"><a href="mailto:info@re-art.dk">info@re-art.dk</a></h3>
        <a href="{{ section.settings.fb_link }}" class="site-footer__text some-link fb" target="_blank">Facebook</a>
        <a href="{{ section.settings.ig_link }}" class="site-footer__text some-link" target="_blank">Instagram</a> 
    </div>

    {% for b in section.blocks %}
    {% assign bs = b.settings %}
    {% assign nav = bs.nav %}
        <div class="site-footer__col">
            <h3 class="site-footer__heading">{{ bs.title }}</h3>

            <div class="site-footer__col__nav">
                <ul class="site-footer__col__nav__menu">
                {% for link in linklists[nav].links %}
                    <li class="site-footer__col__nav__item">
                        <a href="{{ link.url }}" class="site-footer__col__nav__item__link" data-item-name="{{ link.title }}">{{ link.title }}</a>
                    </li>
                {% endfor %}
                </ul>
            </div>
        </div>
    {% endfor %}
</div>

<div class="site-footer__copyright-wrapper container">
    <p>Copyright &copy; {{ 'now' | date: "%Y" }}, {{ shop.name | link_to: '/' }}. Design og udvikling af <a href="https://thomasaggerholm.dk" target="_blank">Aggerholm</a></p>
</div>

{% schema %}
    {
        "name": "Footer",
        "class": "site-footer",
        "settings": [{
            "type": "header",
            "content": "Sociale medier"
        },
        {
            "type": "text",
            "id": "fb_link",
            "label": "Link til Facebook"
        },
        {
            "type": "text",
            "id": "ig_link",
            "label": "Link til Instagram"
        }],
        "blocks": [
            {
                "type": "footer_col",
                "name": "Footer kolonne",
                "settings": [
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Overskrift"
                    },
                    {
                        "type": "link_list",
                        "id": "nav",
                        "label": "Vælg linkliste"
                    }
                ]
            }
        ]
    }
{% endschema %}