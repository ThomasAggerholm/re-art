<div class="all-rooms">
    <div class="all-rooms__inner container">
        <div class="all-rooms__header">
            <h2 class="all-rooms__title js-all-rooms-animate">{{ section.settings.title }}</h2>

            <div class="all-rooms__header__description js-all-rooms-animate">
                {{ section.settings.desc }}
            </div>
        </div>

        <div class="all-rooms__row">
            {% for block in section.blocks %}
                {% assign collHandle = block.settings.coll %}
                <div class="all-rooms__grid-item js-all-rooms-animate">
                    <div class="all-rooms__grid-item__title">
                        {{- collections[collHandle].title -}}
                    </div>

                    <div class="all-rooms__grid-item__btn">
                        <a href="{{ collections[collHandle].url }}" class="btn btn--white">SHOP NU</a>
                    </div>

                    <div class="overlay"></div>

                    <div class="all-rooms__grid-item__image"> 
                        {% if collections[collHandle].image != blank %}
                            {{ collections[collHandle].image | img_url: 'large' | img_tag }}
                        {% else %}
                            {{ block.settings.bg_image | img_url: 'large' | img_tag }}        
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
 
{% schema %}
    {
        "name": "All themes",
        "settings": [{
            "type": "text",
            "id": "title",
            "label": "Overskrift"
        },
        {
            "type": "richtext",
            "id": "desc",
            "label": "Alle rum beskrivelse"
        }],
        "blocks": [{
            "type": "theme",
            "name": "Tema",
            "settings": [{
                "type": "collection",
                "id": "coll",
                "label": "VÃ¦lg kollektion"
            },
            {
                "type": "image_picker",
                "id": "bg_image",
                "label": "Baggrundsbillede"
            }]
        }]
    }
{% endschema %}